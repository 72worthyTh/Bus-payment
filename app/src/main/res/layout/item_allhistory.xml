<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/card_item">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#49000000"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Compte Debité:"/>

        <TextView
            android:id="@+id/idnumero1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="150dp"
            android:textColor="@android:color/black"
            android:text="numero"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/idnumero1"
            android:textColor="@android:color/black"
            android:text="Compte Credité:"
            />
        <TextView
            android:id="@+id/type"
            android:layout_below="@id/idnumero1"
            android:text="Type"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/type"
            android:textColor="@android:color/black"
            android:text="Montant:"
            />
        <TextView
            android:id="@+id/solde"
            android:layout_below="@id/type"
            android:text="montant"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/solde"
            android:textColor="@android:color/black"
            android:text="Date:"
            />
        <TextView
            android:id="@+id/taux"
            android:layout_below="@id/solde"
            android:text="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/taux"
            android:textColor="@android:color/black"
            android:text="Opération:"
            />
        <TextView
            android:id="@+id/decouvert"
            android:layout_below="@id/taux"
            android:text="decouvert"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView  >